<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    tools:context=".activity.project.MobilePosLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/color_bg" />


    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="上海报业移动POS机"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppName"
        android:layout_margin="20dp"
        android:background="@mipmap/bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/username">
            </ImageView>

            <EditText
                android:id="@+id/etUserCode"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户名">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/userpas">
            </ImageView>

            <EditText
                android:id="@+id/etPassword"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="密码">
            </EditText>
        </LinearLayout>

        <CheckBox
            android:id="@+id/chkboxRemeberPIN"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="记住密码"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvShiftOn"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@drawable/btn_bg_semic"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="开班"/>

            <TextView
                android:id="@+id/tvShiftOff"
                android:layout_marginLeft="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@drawable/btn_bg_semic"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="结班"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_marginLeft="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@drawable/btn_bg_semic"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="支付"/>
        </LinearLayout>



        <TextView
            android:id="@+id/tvShiftStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="当前状态：已开班"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tvExit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tvPosNo"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="设备号：20013"
            android:textColor="@color/black"
            tools:ignore="RtlCompat">
        </TextView>

    </LinearLayout>

</RelativeLayout>
