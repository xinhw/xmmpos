<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/base_map">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/back_img"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="报业大厦POS机"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            android:src="@drawable/setting_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvExit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="注销"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:background="@color/lightskyblue"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="5"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tvPosNo"
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:layout_height="match_parent"
               android:text="POS号：25001"
               android:textSize="14sp"
               android:layout_marginLeft="3dp"
               android:paddingLeft="2dp"
               android:textColor="@color/black"
               android:background="@drawable/seleted_status"
               android:gravity="center|left"/>

           <TextView
               android:id="@+id/tvTime"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:text="时间：2023-09-30 16:32:34"
               android:textSize="14sp"
               android:paddingLeft="5dp"
               android:textColor="@color/black"
               android:background="@drawable/seleted_status"
               android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgNetworkConnect"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:background="@drawable/network_connect"/>
            <ImageView
                android:id="@+id/imgNetworkDisconnect"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/network_disconnect"/>

            <TextView
                android:id="@+id/tvTotalCount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="总数：235"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:background="@drawable/seleted_status"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="总金额：2304.00"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:background="@drawable/seleted_status"
                android:gravity="center|left"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:tooltipText="支付区域"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvSelectedTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/seleted_status"
                android:textSize="14sp"
                android:text="选购内容"/>
            <!-- 这里需要加个标题-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/seqNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="序号" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_gray_normal" />

                <TextView
                    android:id="@+id/dishName"
                    android:layout_width="0dp"
                    android:padding="1dp"
                    android:background="@null"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="菜名" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_gray_normal" />

                <TextView
                    android:id="@+id/dishPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="单价" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_gray_normal" />

                <TextView
                    android:id="@+id/dishCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="数量" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_gray_normal" />

                <TextView
                    android:id="@+id/dishAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="金额" />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/selectedRecyclerView"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- 简单统计信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/seleted_status"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="1dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="数量："/>
                <TextView
                    android:id="@+id/tvSubCount"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:text="1000"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="小计："/>
                <TextView
                    android:id="@+id/tvSubAmount"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:text="10076.23"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvClearSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清除订单"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg_semic"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--第一列-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum0"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="0" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#999999" />

                <!--第二列-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="8" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="5" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvBackspace"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="退格" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#999999" />

                <!--第三列-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="9" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="6" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvNum3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="3" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvClear"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="C" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#999999" />

                <!--第四列-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvIncrement"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="加" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvDecrement"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="减" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />


                    <TextView
                        android:id="@+id/tvPrintAgain"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_margin="2dp"
                        android:text="再次\n打印"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_bg_semic"
                        android:gravity="center"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#999999" />

                <!--第5列-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tvCardPay"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="卡支付"
                        android:textSize="16sp"
                        android:layout_margin="2dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_bg_semic"
                        android:gravity="center"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />
                    <TextView
                        android:id="@+id/tvQRPay"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="二维码"
                        android:textSize="16sp"
                        android:layout_margin="2dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_bg_semic"
                        android:gravity="center"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/btn_gray_normal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:tooltipText="商品区域"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <!-- 商品类别-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dishTypeRecyclerView"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/btn_gray_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <!-- 商品类别-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dishSubTypeRecyclerView"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/btn_gray_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <!-- 商品明细-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dishRecyclerView"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/noDishView"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="没有商品"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
